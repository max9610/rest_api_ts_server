{
    "compilerOptions": {
      "outDir": "./dist",
      "rootDir": "./src",
      "lib": ["esnext"],
      "target": "esnext",
      "moduleResolution": "NodeNext",
      "module": "NodeNext",
      "strict": false,
      "sourceMap": true,
      "esModuleInterop": true,
      "declaration": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true
    },
    "include": ["src/**/*.ts"],
    "exclude": ["src/**/*.test.ts"]
  }